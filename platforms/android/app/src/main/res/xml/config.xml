        Apache Cordova Team
    </author>
    <content src="main.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="www/res/android/icon-36-ldpi.png" />
    <icon density="mdpi" src="www/res/android/icon-48-mdpi.png" />
    <icon density="hdpi" src="www/res/android/icon-72-hdpi.png" />
    <icon density="xhdpi" src="www/res/android/icon-96-xhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="landscape" />
