<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10006" id="com.kep.ninjarun.NinjaRun" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Endless Monsters</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="main.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/res/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="www/res/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="www/res/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="www/res/android/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="landscape" />
    <preference name="android-permission" value="com.android.vending.BILLING" />
    <plugin name="cordova-plugin-device-orientation" spec="^1.0.7" />
    <plugin name="cordova-plugin-admobpro" spec="^2.31.1" />
    <plugin name="cc.fovea.cordova.purchase" spec="^7.1.2" />
    <engine name="android" spec="^7.0.0" />
</widget>
